{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**",
      "./*.json",
      "./*.js",
      "./*.ts",
      "./*.mts",
      "./*.mjs",
      "!!dist",
      "!!src-tauri",
      "!!node_modules"
    ]
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "all",
      "react": "all",
      "next": "all"
    },
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      },
      "style": {
        "recommended": false,
        "useComponentExportOnlyModules": "off"
      },
      "complexity": {
        "recommended": false
      },
      "suspicious": {
        "recommended": false,
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "off",
        "useImportExtensions": "off",
        "noUnusedImports": "off",
        "noInvalidPositionAtImportRule": "off"
      },
      "nursery": {
        "noFloatingPromises": "off",
        "useAwaitThenable": "off"
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": []
  }
}
